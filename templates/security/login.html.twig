{% extends 'base.html.twig' %}
{% block main %}

<form method="post">
    {% if error %}
        <div>{{ error.messageKey }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecter en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <h1>Connexion</h1>
    <label for="inputUsername">Username</label>
    <input type="text" value="{{ last_username }}" name="username" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" required>

    <p><a href="#">Mot de passe oublié ?</a></p>
    <div id="captcha" class="g-recaptcha" data-sitekey="6LfTqzsaAAAAABWeny5S8phe_suRG06euefyz37Y"></div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Connexion
    </button>
</form>
{% endblock %}
