{% extends 'private/admin/admin-panel.html.twig' %}

{% block containerDynamic %}
    <h2>PASSWORD CHANGE</h2>
    <div>
        <form action="{{ path('admin-password-change', {'id': id }) }}" method="post">
            <div class="form-row">
                <div class="label-form">
                    <label for="password">Nouveau mot de passe</label>
                </div>
                <div class="field-form">
                    <input type="password" name="password" placeholder="Nouveau mot de passe">
                </div>
            </div>
            <div class="form-row">
                <div class="label-form">
                    <label for="password-repeat">Répétez le mot de passe</label>
                </div>
                <div class="field-form">
                    <input type="password" name="password-repeat" placeholder="Répétez le mot de passe">
                </div>
            </div>
            <input type="hidden" name="valid">
            <input type="submit" value="Envoyer">
        </form>
    </div>
{% endblock %}